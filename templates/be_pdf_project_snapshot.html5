
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <link rel="stylesheet" type="text/css" media="all" href="http://172.22.8.45/core/system/modules/dreebit_core/assets/stylesheets/print.css">


</head>
<body>

<div class="ym-wrapper">

    <div class="ym-wbox">

        <div class="row">
            <div class="project large-12 columns">

                <h1>{{project.title}}</h1>
                <h3>{{locale.version_from}}: {{snapshot.date}}</h3>
                <hr>
                <h3>{{locale.requirements}}:</h3>
            </div>
        </div>

        {% for requirement in snapshot.requirements %}

        <div class="row">
            <form class="large-12 columns">

                <fieldset class="{{requirement.title}}">
                    <legend>{{requirement.title}} ({{requirement.state}})</legend>

                    <table width="100%">
                        <tr>
                            <td class="label" width="17%">{{locale.state}}</td>
                            <td width="17%">{{requirement.state}}</td>

                            <td class="label" width="17%">{{locale.category}}</td>
                            <td width="17%">{{requirement.category}}</td>

                            <td class="label" width="17%">{{locale.steakholder}}</td>
                            <td width="17%">{{ requirement.steakholder is empty ? locale.no_entry : requirement.steakholder}}</td>
                        </tr>

                        <tr>
                            <td class="label">{{locale.description}}</td>
                            <td colspan="2">{{ requirement.description is empty ? locale.no_entry : requirement.description}}</td>
                        </tr>

                        <tr>
                            <td class="label">{{locale.test_cases}}</td>
                            <td colspan="2">
                            {% if requirement.testCases is empty %}
                                {{locale.no_entry}}
                            {% else %}
                                <ul>
                                {% for case in requirement.testCases %}
                                    <li>{{case}}</li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                            </td>
                        </tr>
                    </table>

                </fieldset>
            </form>
        </div>
        {% endfor %}

    </div>

</div>


</body>
</html>